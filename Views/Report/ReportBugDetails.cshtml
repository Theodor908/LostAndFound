@model LostAndFound.Models.ReportBugDTO
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Report Bug Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="bg-light rounded-4 shadow-sm p-4 mb-4">
                <h1 class="h3 mb-3">Report Bug Details</h1>
                <p class="text-muted mb-4">
                    <i class="fas fa-bug me-2"></i>Details of the reported bug.
                </p>
            <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="5" readonly></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-controller="Admin" asp-action="ReportBugList" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Report Bug List
                    </a>
                        @if (Model.IsResolved)
                        {
                            <span class="badge bg-success">Resolved</span>
                        }
                        else
                        {
                            @if(User.IsInRole("Admin"))
                            {
                                <a asp-controller="Report" asp-action="SolveBug" asp-route-id="@Model.Id" class="btn btn-success">
                                    <i class="fas fa-check me-1"></i>Resolve Report
                                </a>
                            }      
                        }
            </div>
        </div>
    </div>
</div>
