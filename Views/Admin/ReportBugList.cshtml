@model LostAndFound.Models.ReportBugsListDTO
@{
    ViewData["Title"] = "Report Bug List"; 
    Layout = "~/Views/Shared/_Layout.cshtml";  
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Report Bugs</h2>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <form asp-controller="Admin" asp-action="ReportBugList">
                    <div class="d-flex align-items-center justify-content-between gap-3">
                        <input type="text" name="searchTerm" class="form-control" placeholder="Search by bug name" value="@Model.SearchTerm" />              
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                    <div class="form-check form-check-inline mt-3">
                        <input asp-for="@Model.IsResolved" class="form-check-input" type="checkbox" id="isResolved" name="isResolved") />
                        <label class="form-check-label" for="isResolved">Resolved</label>
                    </div>
                </form>
            </div>
        </div>

        <ul class="list-group"></ul>
        @foreach (var report in Model.ReportBugsList.Items)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5>@report.Title</h5>
                        <p>@report.Description</p>
                        <p>Is it resolved? @report.IsResolved</p>
                    </div>
                    <div>
                        <a asp-controller="Report" asp-action="ReportBugDetails" asp-route-id="@report.Id" class="btn btn-secondary">Details</a>
                        <a asp-controller="Report" asp-action="DeleteReportPost" asp-route-id="@report.Id" class="btn btn-danger">Delete</a>
                    </div>
                </li>
            }
        </ul>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <p>Total Report Bugs: @Model.ReportBugsList.Items.Count</p>
            </div>
        </div>
    </div>
</div>
@if (Model.ReportBugsList.TotalPages > 1)
    {
        <div class="row mt-4">
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(!Model.ReportBugsList.HasPrevious ? "disabled" : "")">
                            <a class="page-link" 
                                asp-controller="Admin" 
                                asp-action="PostList" 
                                asp-route-searchTerm="@Model.SearchTerm"
                                asp-route-pageNumber="@(Model.ReportBugsList.CurrentPage - 1)">
                                Previous
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.ReportBugsList.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.ReportBugsList.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                    asp-controller="Admin"
                                    asp-action="PostList"
                                    asp-route-searchTerm="@Model.SearchTerm"
                                    asp-route-pageNumber="@i">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(!Model.ReportBugsList.HasNext ? "disabled" : "")">
                            <a class="page-link" 
                                asp-controller="Admin" 
                                asp-action="PostList" 
                                asp-route-searchTerm="@Model.SearchTerm"
                                asp-route-pageNumber="@(Model.ReportBugsList?.CurrentPage + 1)">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
    <div class="row mt-4 mb-4"></div>
        <div class="col-12 text-center">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Back to Dashboard</a>
        </div>
    </div>