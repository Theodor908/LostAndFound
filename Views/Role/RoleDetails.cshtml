@model LostAndFound.Models.RoleDetailsDTO
@{
    ViewData["Title"] = "Role Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.RoleName</h5>
            <p class="card-text">ID: @Model.Id</p>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <h3>Users with this Role @Model.UsersInRole</h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-controller="Role" asp-action="EditRole" asp-route-id="@Model.Id" class="btn btn-primary">Edit Role</a>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-controller="Admin" asp-action="RoleList" class="btn btn-secondary">Back to Role List</a>
        </div>
    </div>
</div>