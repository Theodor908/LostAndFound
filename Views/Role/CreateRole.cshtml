@model LostAndFound.Models.RoleDTO
@{
    ViewData["Title"] = "Create Role";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Create Role</h2>
        </div>
    </div>

    <form asp-controller="Role" asp-action="CreateRole" method="post">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Role Name</label>
            <input asp-for="@Model.Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create Role</button>
    </form>
    <div class="row mt-4">
        <div class="col-12">
            <a asp-controller="Admin" asp-action="RoleList" class="btn btn-secondary">Back to Role List</a>
        </div>
    </div>
</div>
