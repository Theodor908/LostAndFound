@model LostAndFound.Models.UserDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-light rounded-4 shadow-sm p-4 profile-section">
                <div class="row align-items-center">
                    <div class="col-md-auto text-center text-md-start mb-3 mb-md-0">
                        @{
                            if(Model.Photo != null)
                            {
                                <img src="@Model.Photo.Url" alt="Profile Picture" class="profile-img">
                            }
                            else
                            {
                                <img src="~/img/Portrait_Placeholder.png" alt="Profile Picture" class="profile-img">
                            }
                        }
                    </div>
                    <div class="col-md">
                        <h2 class="mb-1">@Model.Username</h2>
                        <p class="text-muted mb-2">
                            <i class="fas fa-envelope me-2"></i>@Model.Email
                        </p>
                        <p class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>@Model.City, @Model.Country
                        </p>
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit me-1"></i>Edit Profile
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Display the Found Items and Lost Items -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">Found Items</h4>
            @if (Model.Items.Any())
            {
                <div class="row g-4">
                    @foreach (var item in Model.Items)
                    {
                        @if(item.IsFound == true)
                        {
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-4 item-card">
                                 @{
                                    if(item.IsClaimed == true)
                                    {
                                        <span class="badge bg-warning status-badge">Claimed</span>
                                    }
                                    else if(item.IsFound == true)
                                    {
                                        <span class="badge bg-success status-badge">Found</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger status-badge">Lost</span>
                                    }
                                }
                                <span class="badge bg-success status-badge">@item.IsFound</span>
                                <img src="~/img/placeholder.jpg" alt="@item.Name" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text mt-2">@item.Description</p>
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="d-flex">
                                        <a href="#" class="btn btn-outline-primary btn-sm flex-grow-1 me-2">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm flex-grow-1">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    }
                </div>
            }
            else
            {
                <p class="text-muted">You haven't reported any found items yet.</p>
            }
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-3">Lost Items</h4>
            @if (Model.Items.Any())
            {
                <div class="row g-4">
                    @foreach (var item in Model.Items)
                    {
                        @if(item.IsFound == false)
                        {
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-4 item-card">
                                @{
                                    if(item.IsClaimed == true)
                                    {
                                        <span class="badge bg-warning status-badge">Claimed</span>
                                    }
                                    else if(item.IsFound == true)
                                    {
                                        <span class="badge bg-success status-badge">Found</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger status-badge">Lost</span>
                                    }
                                    @if(item.PhotosDTO != null && item.PhotosDTO.Any())
                                    {
                                        <img src="@item.PhotosDTO.First().Url" alt="@item.Name" class="card-img-top">
                                    }
                                    else
                                    {
                                        <img src="~/img/placeholder.jpg" alt="@item.Name" class="card-img-top">
                                    }
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text mt-2">@item.Description</p>
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="d-flex">
                                        <a asp-controller="Post" asp-action="PostUpdate" asp-route-id="@item.PostId" method="get" class="btn btn-outline-primary btn-sm flex-grow-1 me-2">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm flex-grow-1">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                </div>
            }
            else
            {
                <p class="text-muted">You haven't reported any lost items yet.</p>
            }
        </div>
    </div>
</div>