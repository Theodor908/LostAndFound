@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}
    
<div class="container py-4">
    <div class="row g-4">
        <div class="col-12 col-lg-6 order-2 order-lg-1">
            <div class="p-4 bg-light rounded shadow-sm">
                <form>
                    <fieldset>
                        <legend class="mb-4">Login</legend>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="username" placeholder="Enter your username" required>
                            <label for="username">Username <span class="text-danger">*</span></label>
                        </div>

                        <div class="form-floating mb-3">
                            <input type="password" class="form-control" id="password" placeholder="Enter your password" required>
                            <label for="password">Password <span class="text-danger">*</span></label>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input id="rememberMeCheckbox" type="checkbox" class="form-check-input">
                                <label for="rememberMeCheckbox" class="form-check-label">Remember me</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-12 col-lg-6 order-1 order-lg-2 d-flex align-items-center">
            <div class="text-center text-lg-start p-4">
                <h1 class="display-5 mb-3">Millions of people find their lost items</h1>
                <p class="lead">Find your lost items or report something has been found</p>
            </div>
        </div>
    </div>
</div>
