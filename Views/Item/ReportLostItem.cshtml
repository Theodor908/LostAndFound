@{    
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Report Lost Item";
}

@* @section Styles {
    <link rel="stylesheet" href="~/css/ReportLostItem.css" asp-append-version="true" />
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="mb-4">Report Lost Item</h1>
            
            @if (User.Identity.IsAuthenticated == false)
            {
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">Authorization Required</h4>
                    <p>You must be logged in to report a lost item.</p>
                    <hr>
                    <p class="mb-0">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary ms-2">Register</a>
                    </p>
                </div>
            }
            else
            {
                <p class="lead mb-4">Please provide details about your lost item to help others identify it.</p>
                
                <div class="bg-light rounded-4 shadow-sm p-4 mb-4">
                    <form asp-controller="Item" asp-action="ReportLost" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Name" class="form-control" placeholder="e.g. Blue Backpack, iPhone 14 Pro, Gold Watch">
                                    <label asp-for="Name"> Item Name</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                    
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <select asp-for="Category.Name" class="form-select">
                                        <option value="" selected disabled>Select a category</option>
                                        <option value="electronics">Electronics</option>
                                        <option value="clothing">Clothing</option>
                                        <option value="jewelry">Jewelry</option>
                                        <option value="documents">Documents</option>
                                        <option value="pets">Pets</option>
                                        <option value="other">Other</option>
                                    </select>
                                    <label asp-for="Category.Name">Category</label>
                                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Status.DateLost" type="date" class="form-control" max="@DateTime.Now.ToString("yyyy-MM-dd")">
                                    <label asp-for="Status.DateLost">Date Lost</label>
                                    <span asp-validation-for="Status.DateLost" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Status.Location" class="form-control" placeholder="Describe the location" style="height: 120px"></textarea>
                                    <label asp-for="Status.Location"> Location</label>
                                    <span asp-validation-for="Status.Location" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="form-floating mb-3">
                                    <textarea asp-for="Description" class="form-control" placeholder="Describe the lost item" style="height: 120px"></textarea>
                                    <label asp-for="Description">Description</label>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label class="form-label">Upload Photo</label>
                                    <input type="file" class="form-control" id="ItemPhoto" name="ItemPhoto" accept="image/*">
                                    <small class="text-muted">Upload a clear photo of your item to help with identification.</small>
                                </div>
                            </div>                                               
                            <div class="col-md-12 mt-3">
                                <button type="submit" class="btn btn-primary">Submit Report</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary ms-2">Cancel</a>
                            </div>
                        </div>
                    </form>
                </div>
                
                <div class="bg-light rounded-4 shadow-sm p-4">
                    <h4>Tips for Better Results</h4>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent">Be as specific as possible about the item's appearance.</li>
                        <li class="list-group-item bg-transparent">Upload a clear photo if possible.</li>
                        <li class="list-group-item bg-transparent">Provide accurate location details.</li>
                        <li class="list-group-item bg-transparent">Check the browse page regularly for updates.</li>
                    </ul>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} *@