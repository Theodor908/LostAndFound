@model LostAndFound.Models.CategoryDTO
@{
    ViewData["Title"] = "Category Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text">ID: @Model.Id</p>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <h3>Items in this Category: @Model.ItemCount</h3>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@Model.Id" class="btn btn-primary">Edit Category</a>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <a asp-controller="Admin" asp-action="CategoryList" class="btn btn-secondary">Back to Category List</a>
        </div>
    </div>

</div>
