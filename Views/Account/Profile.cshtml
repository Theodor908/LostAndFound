@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Profile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="bg-light rounded-4 shadow-sm p-4 profile-section">
                <div class="row align-items-center">
                    <div class="col-md-auto text-center text-md-start mb-3 mb-md-0">
                        <img src="~/img/placeholder.jpg" alt="Profile Picture" class="profile-img">
                    </div>
                    <div class="col-md">
                        <h2 class="mb-1">John Doe</h2>
                        <p class="text-muted mb-2">
                            <i class="fas fa-envelope me-2"></i>john.doe@example.com
                        </p>
                        <button class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit me-1"></i>Edit Profile
                        </button>
                    </div>
                    <div class="col-md-auto mt-3 mt-md-0">
                        <div class="row g-2">
                            <div class="col-4 col-md-12 mb-md-2">
                                <div class="profile-stat">
                                    <div class="stat-number">5</div>
                                    <div class="stat-label">Lost Items</div>
                                </div>
                            </div>
                            <div class="col-4 col-md-12 mb-md-2">
                                <div class="profile-stat">
                                    <div class="stat-number">3</div>
                                    <div class="stat-label">Found Items</div>
                                </div>
                            </div>
                            <div class="col-4 col-md-12">
                                <div class="profile-stat">
                                    <div class="stat-number">2</div>
                                    <div class="stat-label">Claimed</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
            <ul class="nav nav-tabs mb-4" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="items-tab" data-bs-toggle="tab" data-bs-target="#items-content" type="button" role="tab" aria-controls="items-content" aria-selected="true">
                        <i class="fas fa-list-ul me-2"></i>My Items
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="notifications-tab" data-bs-toggle="tab" data-bs-target="#notifications-content" type="button" role="tab" aria-controls="notifications-content" aria-selected="false">
                        <i class="fas fa-bell me-2"></i>Notifications
                        <span class="badge bg-danger rounded-circle badge-count">3</span>
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="settings-tab" data-bs-toggle="tab" data-bs-target="#settings-content" type="button" role="tab" aria-controls="settings-content" aria-selected="false">
                        <i class="fas fa-cog me-2"></i>Settings
                    </button>
                </li>
            </ul>
            
            <div class="tab-content" id="profileTabsContent">
                <div class="tab-pane fade show active" id="items-content" role="tabpanel" aria-labelledby="items-tab">
                    <div class="mb-4">
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-primary active">All Items</button>
                            <button type="button" class="btn btn-outline-primary">Lost</button>
                            <button type="button" class="btn btn-outline-primary">Found</button>
                            <button type="button" class="btn btn-outline-primary">Claimed</button>
                        </div>
                    </div>
                    
                    <div class="row g-4">
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-4 item-card">
                                <span class="badge bg-danger status-badge">Lost</span>
                                <img src="~/img/placeholder.jpg" alt="Lost Laptop" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-laptop category-icon text-primary"></i>
                                        MacBook Pro
                                    </h5>
                                    <div class="info-item">
                                        <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                        Library, 2nd Floor
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                        Mar 8, 2025
                                    </div>
                                    <p class="card-text mt-2">Silver MacBook Pro with stickers on the cover. Last seen in the library.</p>
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="d-flex">
                                        <a href="#" class="btn btn-outline-primary btn-sm flex-grow-1 me-2">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm flex-grow-1">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-4 item-card">
                                <span class="badge bg-success status-badge">Found</span>
                                <img src="~/img/placeholder.jpg" alt="Found Keys" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-key category-icon text-primary"></i>
                                        Keys with Blue Keychain
                                    </h5>
                                    <div class="info-item">
                                        <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                        Parking Lot B
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                        Mar 9, 2025
                                    </div>
                                    <p class="card-text mt-2">Set of keys with a blue dolphin keychain found in Parking Lot B.</p>
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="d-flex">
                                        <a href="#" class="btn btn-outline-primary btn-sm flex-grow-1 me-2">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm flex-grow-1">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-sm-6 col-lg-4 col-xl-3">
                            <div class="card h-100 border-0 shadow-sm hover-shadow transition-all rounded-4 item-card">
                                <span class="badge bg-info status-badge">Claimed</span>
                                <img src="~/img/placeholder.jpg" alt="Water Bottle" class="card-img-top">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-wine-bottle category-icon text-primary"></i>
                                        Blue Water Bottle
                                    </h5>
                                    <div class="info-item">
                                        <i class="fas fa-map-marker-alt text-muted me-2"></i>
                                        Science Building
                                    </div>
                                    <div class="info-item">
                                        <i class="fas fa-calendar-alt text-muted me-2"></i>
                                        Mar 5, 2025
                                    </div>
                                    <p class="card-text mt-2">Blue metal water bottle with sports logo. Found in Chemistry Lab.</p>
                                </div>
                                <div class="card-footer bg-transparent border-top-0">
                                    <div class="d-flex">
                                        <a href="#" class="btn btn-outline-primary btn-sm flex-grow-1 me-2">
                                            <i class="fas fa-edit me-1"></i> Edit
                                        </a>
                                        <a href="#" class="btn btn-outline-danger btn-sm flex-grow-1">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-center py-5 d-none">
                        <i class="fas fa-box-open fa-5x text-secondary mb-3"></i>
                        <h3>No Items Found</h3>
                        <p class="text-muted">You haven't reported any lost or found items yet</p>
                        <div class="mt-3">
                            <a href="#" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i> Report Lost Item
                            </a>
                            <a href="#" class="btn btn-success">
                                <i class="fas fa-hand-holding me-1"></i> Report Found Item
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="tab-pane fade" id="notifications-content" role="tabpanel" aria-labelledby="notifications-tab">
                    <div class="bg-light rounded-4 shadow-sm p-0 overflow-hidden">
                        <div class="list-group list-group-flush">

                            <div class="list-group-item border-0 py-3 px-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="notification-icon bg-primary text-white">
                                            <i class="fas fa-comment"></i>
                                        </span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">New message about your laptop</h6>
                                            <small class="text-muted">3 hours ago</small>
                                        </div>
                                        <p class="mb-1">Someone has sent you information about your lost MacBook Pro.</p>
                                        <div>
                                            <a href="#" class="btn btn-sm btn-primary">View Message</a>
                                            <button class="btn btn-sm btn-link text-muted">Mark as Read</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="list-group-item border-0 py-3 px-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="notification-icon bg-success text-white">
                                            <i class="fas fa-check-circle"></i>
                                        </span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">Item claimed successfully</h6>
                                            <small class="text-muted">1 day ago</small>
                                        </div>
                                        <p class="mb-1">Your blue water bottle has been claimed by its owner.</p>
                                        <div>
                                            <a href="#" class="btn btn-sm btn-primary">View Details</a>
                                            <button class="btn btn-sm btn-link text-muted">Mark as Read</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="list-group-item border-0 py-3 px-4">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <span class="notification-icon bg-warning text-white">
                                            <i class="fas fa-exclamation-triangle"></i>
                                        </span>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">Action required</h6>
                                            <small class="text-muted">2 days ago</small>
                                        </div>
                                        <p class="mb-1">Please update your contact information for better communication.</p>
                                        <div>
                                            <a href="#" class="btn btn-sm btn-primary">Update Info</a>
                                            <button class="btn btn-sm btn-link text-muted">Dismiss</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="settings-content" role="tabpanel" aria-labelledby="settings-tab">
                <div class="bg-light rounded-4 shadow-sm p-4">
                    <form>
                        <h5 class="mb-4">Account Settings</h5>

                        <div class="mb-4">
                            <h6 class="mb-3">Personal Information</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="inputFirstName" placeholder="First Name" value="John">
                                        <label for="inputFirstName">First Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="text" class="form-control" id="inputLastName" placeholder="Last Name" value="Doe">
                                        <label for="inputLastName">Last Name</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="email" class="form-control" id="inputEmail" placeholder="Email" value="john.doe@example.com">
                                        <label for="inputEmail">Email</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="mb-3">Change Password</h6>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" id="inputCurrentPassword" placeholder="Current Password">
                                        <label for="inputCurrentPassword">Current Password</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" id="inputNewPassword" placeholder="New Password">
                                        <label for="inputNewPassword">New Password</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm New Password">
                                        <label for="inputConfirmPassword">Confirm New Password</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h6 class="mb-3">Notification Settings</h6>
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" role="switch" id="notifyEmail" checked>
                                <label class="form-check-label" for="notifyEmail">Email Notifications</label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="notifyWeb" checked>
                                <label class="form-check-label" for="notifyWeb">Web Notifications</label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-outline-secondary me-2">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
            </div>    
        </div>
    </div>
</div>