@model LostAndFound.Models.RoleListDTO
@{
    ViewData["Title"] = "Role List";  
    Layout = "~/Views/Shared/_Layout.cshtml";  
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Roles</h2>
        </div>
    </div>

    <ul class="list-group">
        @foreach (var role in Model.RoleList.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5>@role.Name</h5>
                </div>
                <div>
                    <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-secondary">Edit</a>
                    <a asp-controller="Admin" asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                </div>
            </li>
        }
    </ul>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <p>Total Roles: @Model.RoleList.Items.Count</p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12 text-center">
            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">Back to Dashboard</a>
        </div>
    </div>
</div>
