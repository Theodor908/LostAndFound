                </a>
            </li>
        </ul>
    </nav>
    
    <!-- Empty State (Only shown when there are no results) TO DO-->
    @if (Model != null && Model.Count == 0)
    {
        <div class="text-center py-5">
            <i class="fas fa-search fa-5x text-secondary mb-3"></i>
            <h3>No Items Found</h3>
