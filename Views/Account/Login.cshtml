@model LostAndFound.Models.LoginDTO

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
}

<div class="container py-4">
    <div class="row g-4">
        <div class="col-12 col-lg-6 order-2 order-lg-1">
            <div class="p-4 bg-light rounded shadow-sm">
                <form asp-controller="Account" asp-action="Login" method="post">
                    <fieldset>
                        <legend class="mb-4">Login</legend>

                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="UsernameOrEmail" class="form-control" placeholder="Enter your username or email" required>
                            <label asp-for="UsernameOrEmail"></label>
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" required>
                            <label asp-for="Password"></label>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                                <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </fieldset>
                </form>
            </div>
        </div>
        <div class="col-12 col-lg-6 order-1 order-lg-2 d-flex align-items-center">
            <div class="text-center text-lg-start p-4">
                <h1 class="display-5 mb-3">Millions of people find their lost items</h1>
                <p class="lead">Thank you for joining the community and helping each other to find what has been lost</p>
            </div>
        </div>
    </div>
</div>
